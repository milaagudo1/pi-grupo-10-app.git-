<%- include('partials/head') %>

	<!-- Header -->
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img src="/images/logo.png">
					</a>
				</div>
	
				<div class="col-7 col-md-6">
					<form action="/products/results" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos, marcas y más"
							class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link">
						<i class="fas fa-hand-holding-usd"></i>
						Todas las opiniones en un solo lugar.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
	
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">Todos los productos</a></li>
					<li><a href="/products/add">Agregar producto</a></li>
				</ul>
				<ul class="right-navbar">
					<li>
						<a href="profile.html"> Mi Perfil <i class="fas fa-user"></i></a>
					</li>
					<li>
						<form action="" method="post">
							<button class="logout" type="submit">
								Cerrar sesión <i class="fas fa-sign-in-alt"></i>
							</button>
						</form>
					</li>
					<li>
						<a href="register.html">Registración <i class="far fa-address-card"></i>
						</a>
					</li>
					<li>
						<a href="login.html">Login <i class="fas fa-sign-in-alt"></i></a>
					</li>
				</ul>
			</nav>
		</div>
	</header>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Editar datos del producto</h2>
        </div>

        <div class="col-12">
            <form action="/products/edit/<%= product.id %>" method="GET" class="edit">
                <!-- ID oculto -->
                <input type="hidden" name="id" value="<%= product.id %>">

                <!-- Nombre -->
                <div class="form-group mb-3">
                    <label for="nombre">Nombre del producto</label>
                    <input type="text" id="nombre" name="nombre" value="<%= product.nombre %>" class="form-control" required>
                </div>

                <!-- Descripción -->
                <div class="form-group mb-3">
                    <label for="descripcion">Descripción</label>
                    <textarea id="descripcion" name="descripcion" rows="3" class="form-control" required><%= product.descripcion %></textarea>
                </div>

                <!-- Imagen actual -->
                <div class="form-group mb-3">
                    <label>Imagen actual:</label><br>
                    <img src="/images/products/<%= product.imagen %>" alt="<%= product.nombre %>" class="img-thumbnail" style="max-width:150px;">
                </div>

                <!-- Subir nueva imagen -->
                <div class="form-group mb-3">
                    <label for="imagen">Cambiar imagen del producto</label>
                    <input type="file" id="imagen" name="imagen" class="form-control">
                </div>

                <!-- Botón -->
                <div class="form-group text-end">
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
	
<%- include('partials/footer') %>