<%- include('partials/head') %>

	<!-- /Header -->
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img src="/images/logo.png">
					</a>      
				</div>
	
				<div class="col-7 col-md-6">
					<form action="/products/results" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos, marcas y más"
							class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link">
						<i class="fas fa-hand-holding-usd"></i>
						Todas las opiniones en un solo lugar.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
	
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">Todos los productos</a></li>
					<li><a href="/products/add">Cargar producto</a></li>
				</ul>
				<ul class="right-navbar">
					<li>
						<a href="/users/profile"> Nombre del usuario <i class="fas fa-user"></i></a>
					</li>
					<li>
						<form action="" method="post">
							<button class="logout" type="submit">
								Cerrar sesión <i class="fas fa-sign-in-alt"></i>
							</button>
						</form>
					</li>
					<li>
						<a href="/users/register">Creá tu cuenta <i class="far fa-address-card"></i>
						</a>
					</li>
					<li>
						<a href="/users/login">Ingresá <i class="fas fa-sign-in-alt"></i></a>
					</li>
				</ul>
			</nav>
		</div>
	</header>
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
		<h2 class="products-title"><%= producto.nombre %></h2>
<p class="product-detail-description"><%= producto.descripcion %></p>	
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= producto.imagen %>" alt="<%= producto.nombre %>" class="product-detail-img">
					<p class="product-detail-description"><%= producto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
  <% for (let j = 0; j < producto.comentarios.length; j++) { %>
    <article>
      <img src="/images/users/<%= producto.comentarios[j].imagenPerfil %>" 
     alt="<%= producto.comentarios[j].nombreUsuario %>">
      <div class="data">
        <p class="user">
          <strong><%= producto.comentarios[j].nombreUsuario %>:</strong> 
          <%= producto.comentarios[j].texto %>
        </p>
      </div>
    </article>
  <% } %>
</section>
					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->
	 
<%- include('partials/footer') %>