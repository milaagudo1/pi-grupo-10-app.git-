<!--  Head -->
<%- include('partials/head') %>
<!--  /Head -->

	<!-- Header -->
	<% if (logueado) { %>
    <%- include('partials/headerLogueado') %>
<% } else { %>
    <%- include('partials/header') %>
<% } %>
	<!-- /Header -->

		<!-- Datos del usuario -->
		<div class="container products-wrapper">
			<div class="row">
				<section class="info-usuario container products-wrapper">
					<div class="row">
						<div class="img-container offset-3 col-2">
							<img src="/images/users/<%= usuario.avatar %>" alt="foto de perfil" class="foto-perfil">
						</div>
						<div class="data-container col-6">
							<div class="d-flex align-items-center ">
								<h1 class="main-title">
									<%= usuario.usuario %>
								</h1>
								<a class="btn mt-3 ml-4" href="">SEGUIR</a>
							</div>
							<p class="email"><i class="fas fa-envelope"></i>
								<%= usuario.email %>
							</p>

							<!-- El total de los productos cargados -->
                           <p class="total-productos">
						      Total de productos cargados: <%= misProductos %>

                          </p>

						</div>
					</div>
				</section>


				<!-- Show the "ultimos" products -->
				<div class="container products-wrapper">
					<div class="row">
						<div class="col-12">
							<h2 class="products-title">Productos</h2>
						</div>
						<% for (let i=0; i < productos.length; i++) { %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/products/detalle/<%= productos[i].id %>">
										<figure class="product-box_image">
											<img src="/images/products/<%= productos[i].imagen %>"
												alt="<%= productos[i].nombre %>">
										</figure>
										<article class="product-box_data">
											<h2>
												<%= productos[i].nombre %>
											</h2>
											<p>
												<%= productos[i].descripcion %>
											</p>
											<!-- Comentarios -->
											<div class="comentarios">
												
												<% for (let c=0; c < productos[i].comentarios.length; c++) { %>
													<div class="comentario">
														<section class="comments">
														<img src="/images/users/<%= productos[i].comentarios[c].imagenPerfil %>"
															alt="<%= productos[i].comentarios[c].nombreUsuario %>"
															width="30">
														<strong>
															<%= productos[i].comentarios[c].nombreUsuario %>:
														</strong>
														<%= productos[i].comentarios[c].texto %>
														</section>
													</div>
													
													<% } %>
											</div>
										</article>
									</a>
								</section>
							</div>
						<% } %>
					</div>
				</div>
			</div>
		</div>
<!-- footer -->
<%- include('partials/footer') %>
<!-- /footer -->