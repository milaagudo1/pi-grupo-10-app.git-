
<!--  Head -->
<%- include('partials/head') %>
<!--  /Head -->

<!-- Header -->
    <%- include('partials/header') %>

<!-- /Header -->

<!-- Novedades -->
<div class="container products-wrapper">
  <div class="row">
    <div class="col-12">
      <h2 class="products-title">Productos</h2>
    </div>

    <% if (mensaje != undefined) { %>
      <div class="col-12">
        <p><%= mensaje %></p>
      </div>
    <% } %>

    <!-- Show the "ultimos" products -->
    <% for (let i = 0; i < productos.length; i++) { %>
      <div class="col-12 col-sm-6 col-lg-3">
        <section class="product-box">
          <a href="/products/detalle/<%= productos[i].id %>">
            <figure class="product-box_image">
              <img src="/images/products/<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
            </figure>
            <article class="product-box_data">
              <h2><%= productos[i].nombre %></h2>
              <p><%= productos[i].descripcion %></p>

              <!-- mostrar usuario que cargÃ³ el producto con link a su perfil -->
              <% if (productos[i].usuario) { %>
                <p>
                  Cargado por:
                  <a href="/users/profile/<%= productos[i].usuario.id %>">
                    <%= productos[i].usuario.usuario %>
                  </a>
                </p>
              <% } %>

              <!-- Comentarios -->
              <% if (productos[i].comentarios) { %>
                <div class="comentarios">
                  <p>Cantidad de Comentarios: <%= productos[i].comentarios.length %></p>
                </div>
              <% } else { %>
                <div class="comentarios">
                  <p>Sin comentarios</p>
                </div>
              <% } %>
            </article>
          </a>
        </section>
      </div>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
